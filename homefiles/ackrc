# only search with case-sensitivity if there is mixed case
--smart-case

# follow symlinks
--follow

# ignore directories
--ignore-dir=node_modules
--ignore-dir=tmp
--ignore-dir=public
--ignore-dir=build

# added file types
--type-set=css=.css,.less,.scss,.styl
--type-set=html=.html,.mustache,.handlebars,.tmpl,.nunj
--type-set=json=.json
--type-set=md=.markdown,.md
--type-set=style=.scss,.sass,.styl,.less,.css
