# Tmux
alias tl='tmux ls'
function ta () {
    if [ -z "$1" ]; then
        tmux attach
    else
        tmux attach -t $1
    fi
}
function tk () { tmux kill-session -t $1 }
function tc () { tmux new -s $1 }

# Calendar events
alias ev="icalBuddy -f -npn -iep 'title,datetime' -ps '| : |' -po 'datetime,title' -eed eventsToday"

# List files
alias ls='ls -G'
alias la='ls -lAFh'

# Back folders
alias .='cd ../'
alias ..='cd ../../'
alias ...='cd ../../../'
alias ....='cd ../../../../'

# Folders
alias sites="cd ~/Sites"
alias downloads="cd ~/Downloads"
alias desktop="cd ~/Desktop"

# Youtube Download
alias mp3="youtube-dl -x --audio-format mp3 --audio-quality 0"

# Get OS X Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
alias update='softwareupdate -i -a; brew update; brew upgrade --all'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# Brew cask
alias cask="brew cask"

# Brew and cask cleanup & Flush Directory Service cache & Empty the Trash on all mounted volumes and main HDD & Clear Appleâ€™s System Logs
alias cleanup="brew cleanup; brew cask cleanup; dscacheutil -flushcache; killall -HUP mDNSResponder; rm -rfv /Volumes/*/.Trashes; rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# Clean install of node modules
alias npmi="rm -rf node_modules; npm cache clean; npm i"
# kill node chooser
alias kn="kill -9 $(ps -ef | grep node | pick | sed -r 's/\s+/\|/g' | cut -d '|' -f 3)"

function retag () {
    git tag -d $1 && git push origin :refs/tags/$1 && git tag $1
}

# Url Encode/Decode
alias decode='python -c "import sys, urllib as ul; print ul.unquote_plus(sys.argv[1])"'
alias encode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1])"'
