usage() {
cat << EOF
USAGE:
   notes
      open all notes in $EDITOR

   notes help
      show usage

   notes someNewNote
      creates someNewNote.md and open it in $EDITOR
EOF
}

case $1 in
    help)
        usage;
        ;;
    '')
        $EDITOR "$NOTES_PATH"/*.md
        ;;
    *)
        if [ -f "$NOTES_PATH/$1.md" ]; then
            $EDITOR "$NOTES_PATH/$1.md"
        else
            touch "$NOTES_PATH/$1.md" && $EDITOR "$NOTES_PATH/$1.md"
        fi
esac
